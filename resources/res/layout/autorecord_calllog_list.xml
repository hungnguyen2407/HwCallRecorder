<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/calllog_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ListView android:scrollbarStyle="outsideOverlay" android:id="@+id/calllog_list_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@drawable/list_divider_horizontal_time_axis"/>
        <ImageView android:background="@drawable/list_divider_horizontal_time_axis" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/calllog_list_view"/>
        <View android:background="#ffc6c6c6" android:layout_width="1px" android:layout_height="match_parent" android:layout_below="@+id/calllog_list_view" android:layout_marginStart="44dp"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/no_calllog_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:background="@drawable/ic_no_call" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginTop="160dp"/>
        <TextView android:textSize="12sp" android:textColor="#a6000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:text="@string/NoCalllogText" android:layout_marginStart="28dp" android:layout_marginEnd="28dp"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/loading_progressbar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
</RelativeLayout>
